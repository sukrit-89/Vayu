# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGO_URI=mongodb://localhost:27017/airquality
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# CPCB API (India's Official Air Quality Data)
# Get your API key from https://data.gov.in
# Register → Login → My Account → Copy your 40-character API key
CPCB_API_KEY=your_data_gov_in_api_key_here
CPCB_RESOURCE_ID=3b01bcb8-0b14-4abf-b6f2-c1bfd384ba69

# OpenAI API
# Get from https://platform.openai.com
OPENAI_API_KEY=sk-your_openai_api_key_here

# ElevenLabs API (Optional - for voice synthesis)
# Get from https://elevenlabs.io
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# News API
# Get from https://newsapi.org
NEWS_API_KEY=your_newsapi_key_here

# CORS Settings (for production)
ALLOWED_ORIGINS=http://localhost:19006,http://localhost:8081
